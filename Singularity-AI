Bootstrap: docker
From: tensorflow/tensorflow:latest-gpu

%runscript
    exec echo "Tensorflow GPU container"

%files

%environment
    export SSL_CERT_FILE="/etc/ssl/certs/ca-certificates.crt"
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8

%labels

%post
    apt-get -y update
    apt-get -y upgrade
    apt-get -y install python3 python3-pip python-dev git build-essential autoconf openmpi-bin openmpi-common libopenmpi-dev m4 gfortran swig vim
   
    pip3 install keras
	pip3 install matplotlib
    pip3 install numpy
    pip3 install pandas
    pip3 install boto3
    pip3 install awscli
    pip3 install opencv-contrib-python
    pip3 install tqdm
    pip3 install Pillow
    pip3 install easydict
    pip3 install autopep8
    pip3 install scikit-learn
    pip3 install scipy
    

